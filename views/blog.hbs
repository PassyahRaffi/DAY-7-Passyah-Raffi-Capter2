<html>
  <head>
    <title>Creating Blog Page</title>
    <link rel="stylesheet" href="../public/assets/css/style1.css" />
    <link rel="stylesheet" href="../public/assets/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <!-- OPENING NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="https://dumbways.id/"><img src="../public/assets/images/logo dumbway.png" alt="logo"></a>
            
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/blog">Blog</a>
                    </li>
                </ul>

              {{#if isLogin}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <span class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/register">Hello {{user.name}}</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/login">Logout</a>
                    </li>
                </ul>

                {{else}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/login">Login</a>
                    </li>
                </ul>
              {{/if}}
              
                <a href="/contactForm" class="btn px-3 text-white" style="background-color: orangered; font-weight: bold;" type="submit">
                    Contact Me
                </a>
            </div>
        </div>
    </nav>
    <!-- CLOSED NAVBAR -->

    <!-- OPENING BLOG -->
    <!-- OPENING FORM -->
    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        {{messages.success}}
      </div>
    {{/if}}


    <div class="blog">

      {{#if isLogin}}
        <div class="add-new-blog">
          <a href="/add-blog">Add New Blog</a>
        </div>
      {{/if}}
      {{!-- {{#if isLogin}}
        <div style="text-align: right; margin-right:130px; margin-top:50px">
          <a href="/add-blog" style="background-color: orangered; padding: 7px 20px; border-radius: 5px; color:white">Add New Blog</a>     
        </div>
      {{/if}} --}}

      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->

        {{#each blogs}}
          <div class="blog-list-item">

            <div class="blog-image">
              <img src="/uploads/{{this.image}}" alt="image" />
            </div>

            <div class="blog-content">
              {{#if isLogin}}
              <div class="btn-group d-flex justify-content-end">
                <a href="/edit-blog/{{this.id}}" class="btn-edit" style="margin-right: 20px;">Edit Post</a>
                <a href="/delete-blog/{{this.id}}" class="btn-post">Delete Blog</a>
              </div>
              {{/if}}

              <h1>
                <a href="/blog-detail/{{this.id}}">{{this.title}}</a>
              </h1>

              <div class="detail-blog-content">
                {{this.postAt}} | {{this.author}}
              </div>

              <p>
                {{this.content}}
              </p>

              <br>
              <div style="text-align: left; font-weight: bold;">
                <span style="font-size: 13px; color: grey;">
                  {{this.distance}}
                </span>
              </div>
            </div>
            
          </div>
        {{/each}}


      </div>
      <!-- CLOSED POST -->
    </div>
    <!-- CLOSED BLOG -->
    {{!-- <script src="blog.js"></script> --}}
  </body>
</html>