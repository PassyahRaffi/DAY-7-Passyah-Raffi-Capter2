<html>
  <head>
    <title>Creating Blog Page - detail</title>
    <link rel="stylesheet" href="../public/assets/css/style1.css">
    <link rel="stylesheet" href="../public/assets/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <!-- OPENING NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="https://dumbways.id/"><img src="../public/assets/images/logo dumbway.png" alt="logo"></a>
            
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/blog">Blog</a>
                    </li>
                </ul>

              {{#if isLogin}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <span class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/register">Hello {{user.name}}</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/login">Logout</a>
                    </li>
                </ul>

                {{else}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-orange" aria-current="page" style="font-weight: bold;" href="/login">Login</a>
                    </li>
                </ul>
              {{/if}}
              
                <a href="/contactForm" class="btn px-3 text-white" style="background-color: orangered; font-weight: bold;" type="submit">
                    Contact Me
                </a>
            </div>
        </div>
    </nav>
    <!-- CLOSED NAVBAR -->

    <!-- OPENING BLOG -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{blog.title}}</h1>
        <div class="author">{{blog.fullTime}} | {{blog.author}}</div>
        <img src="../uploads/{{blog.image}}" alt="detail" />
        <p>
          {{blog.content}}
        </p>
      </div>
    </div>
    {{!-- <script src="blog.js"></script> --}}
  </body>
</html>